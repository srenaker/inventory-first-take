<h1>Listing collections</h1>

<table>
  <tr>
    <th>User</th>
    <th>Item type</th>
    <th>Attr1</th>
    <th>Attr2</th>
    <th>Attr3</th>
    <th>Attr4</th>
    <th>Attr5</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @collections.each do |collection| %>
  <tr>
    <td><%= collection.user_id %></td>
    <td><%= collection.item_type %></td>
    <td><%= collection.attr1 %></td>
    <td><%= collection.attr2 %></td>
    <td><%= collection.attr3 %></td>
    <td><%= collection.attr4 %></td>
    <td><%= collection.attr5 %></td>
    <td><%= link_to 'Show', collection %></td>
    <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
    <td><%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

